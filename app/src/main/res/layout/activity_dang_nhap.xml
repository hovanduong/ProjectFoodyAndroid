<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DangNhapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_layout_manhinh"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#90000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textAllCaps="false"
        />

        <EditText
            android:id="@+id/edEmailKhoiPhucMatKhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/icon_adduser"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/Email"
            android:inputType="textPersonName"
            android:background="@drawable/custom_form_text"
            android:backgroundTint="#80dcdcdc"
            android:textColor="#000000"
            android:textColorHint="#80000000"
            android:textColorLink="#dcdcdc" />
        <EditText
            android:id="@+id/edPassWordDangNhap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/PasWord"
            android:inputType="textPersonName|textPassword"
            android:background="@drawable/custom_form_text"
            android:backgroundTint="#80dcdcdc"
            android:textColor="#000000"
            android:textColorHint="#80000000"
            android:textColorLink="#dcdcdc" />

        <Button
            android:id="@+id/btnGuiMailKhoiPhuc"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/DangNhap"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_chung"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <View
                android:layout_width="236dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#80000000"></View>

            <TextView
                android:id="@+id/textView"
                android:layout_width="150dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:text="@string/hoac" />

            <View
                android:layout_width="236dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#80000000"></View>

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnDangNhapFaceBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"></com.facebook.login.widget.LoginButton>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnDangNhapGoogle"
            android:layout_width="match_parent"
            android:layout_height="51dp"></com.google.android.gms.common.SignInButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQuenMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/quenmatkhau"
                android:textColor="#80000000" />

            <TextView
                android:id="@+id/txtDangKyKhoiPhuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dangkymoi"
                android:textAlignment="textEnd"
                android:textColor="#80000000" />
        </LinearLayout>

    </LinearLayout>

</android.widget.RelativeLayout>