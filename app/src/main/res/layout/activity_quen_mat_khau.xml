<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E9"
    tools:context=".View.DangNhapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="#E6E7E9"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="20dp"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/khoiphucmatkhau"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@color/colorBack"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/chuoikhoiphucmatkhau"
                android:textAlignment="center"
                android:textColor="@color/colorBack"
                android:textSize="14dp" />
            <EditText
                android:id="@+id/edEmailKhoiPhucMatKhau"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_email"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/Email"
                android:inputType="textPersonName"
                android:background="@drawable/custom_shadow_green"
             />

            <Button
                android:id="@+id/btnGuiMailKhoiPhuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="@string/guimail"
                android:background="@drawable/custom_button_chung"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chuoithanhvien"
                    android:textColor="@color/colorBack" />

                <TextView
                    android:id="@+id/txtDangKyKhoiPhuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dangkymoi"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBack" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</android.widget.RelativeLayout>