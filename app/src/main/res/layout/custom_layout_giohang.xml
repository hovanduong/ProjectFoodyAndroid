<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/containerDatmonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cicleMenuMonAn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:src="@drawable/background"
            android:text="6.8"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenMonAn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ech xao xa ot"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="da dat duoc 2 lan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBack" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingRight="20dp"
                android:text="170000"
                android:textAllCaps="false"
                android:textColor="@color/colorBack" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgGiamSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:src="@drawable/minus"

            />

        <TextView
            android:id="@+id/txtSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="@color/colorBack" />

        <ImageView
            android:id="@+id/imgTangSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/plus" />
    </LinearLayout>

</android.widget.LinearLayout>