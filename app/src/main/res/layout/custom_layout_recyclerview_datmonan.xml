<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/containerDatmonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cicleMenuMonAn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="6.8"
            android:textColor="@color/colorAccent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:src="@drawable/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTenmonannMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ech xao xa ot"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtSoluongMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="da dat duoc 2 lan"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txtGiamonan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gia mon an"
            android:paddingRight="10dp"

            />

        <ImageView
            android:id="@+id/imgThemmonan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/plus"
            />
    </LinearLayout>

</android.widget.LinearLayout>