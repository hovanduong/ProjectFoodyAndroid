<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroungTrangchu"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/group_tab_radio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rd_moinhat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroup_tab"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:text="@string/moinhat"
                    android:textAlignment="center"
                    android:textColor="@drawable/changtext_tabtrangchu" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackgroungTrangchu" />

                <RadioButton
                    android:id="@+id/rd_danhmuc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroup_tab"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:text="@string/danhmuc"
                    android:textAlignment="center"
                    android:textColor="@drawable/changtext_tabtrangchu" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackgroungTrangchu" />

                <RadioButton
                    android:id="@+id/rd_khuvuc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroup_tab"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:text="@string/khuvuc"
                    android:textAlignment="center"
                    android:textColor="@drawable/changtext_tabtrangchu" />


            </RadioGroup>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/netsScrollODau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/nearby"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="@string/gantoi"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btnblog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/blog"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="@string/blog"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnGiaoHang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/delivery"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="@string/giaohang"
                            android:textAllCaps="false"

                            />


                        <Button
                            android:id="@+id/btnLuckyWheel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/luckywel"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="LucKy Wheel"
                            android:textAllCaps="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnDeal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/sale"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="Deal"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btnChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_layout_chucnang"
                            android:drawableLeft="@drawable/heart1"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="Chat"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarOdau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerOdau"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>





